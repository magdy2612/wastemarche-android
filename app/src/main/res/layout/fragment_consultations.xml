<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.drawer.ConsultationsFragment">

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/top_bar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/consultantsButton"
            android:layout_weight="1"
            android:text="Consultants"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/folloupButton"
            android:layout_weight="1"
            android:text="Follow up Consultants"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:layout_weight="1"
            android:id="@+id/issueButton"
            android:text="Issue Request"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ListView
        android:id="@+id/consultantsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
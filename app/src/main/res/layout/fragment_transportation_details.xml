<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wmWhite"
    tools:context=".ui.activities.drawer.TransportationDetailsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/splash"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/title"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textStyle="bold"
            tools:text="Buy Cell Name"
            android:textSize="20sp"
            android:textColor="#e92f3f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/description"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:text="The Quick Brown Fox Jumps Over The Lazy Dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/price"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/wmLightGreen"
            tools:text="10.000 EGP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/date"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            tools:text="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="16dp"
            android:background="@color/wmExtraLightGreen"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/text_method"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/method"
                tools:text="SELL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/text_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/category"
                tools:text="category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:background="@color/wmExtraLightGreen"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/hint_pickupAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pickupAddress"
                tools:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/pin"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:background="@color/wmWhite"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/hint_deliveryAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/deliveryAddress"
                tools:text="Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/pin"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/wmExtraLightGreen"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/text_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/quantity"
                tools:text="val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="@string/text_packaging"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/packaging"
                tools:text="Box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/sendOfferButton"
                android:layout_marginEnd="20dp"
                android:background="@drawable/light_solid_round_corners"
                android:text="@string/button_sendOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/requestExtraInfoButton"
                android:background="@drawable/solid_round_corners"
                android:text="@string/button_requestExtraInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
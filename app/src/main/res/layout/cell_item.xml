<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:scaleType="fitXY"
        android:src="@mipmap/splash"
        android:layout_width="100dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/title"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                tools:text="Item Cell Name"
                android:textSize="20sp"
                android:textColor="#e92f3f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/method"
                android:textColor="@color/wmLightGreen"
                tools:text="(SELL)"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_marginEnd="10dp"
                android:background="@color/wmClear"
                android:scaleType="fitXY"
                android:src="@drawable/delete_icon"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <ImageButton
                android:id="@+id/edit"
                android:background="@color/wmClear"
                android:scaleType="fitXY"
                android:src="@drawable/edit_icon"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </LinearLayout>

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/description"
            tools:text="The Quick Brown Fox Jumps Over The Lazy Dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/category"
                android:layout_weight="1"
                tools:text="Category | cat"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textIsSelectable="true"
                tools:text="Last Update | Jan 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textIsSelectable="true"
                android:layout_weight="1"
                tools:text="Total Offers| 206"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textIsSelectable="true"
                tools:text="New Offers | 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>